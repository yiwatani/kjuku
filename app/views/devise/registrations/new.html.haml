.userWrapper
  .upIcon
    = link_to (image_tag "kinniku_logo.png", class: 'logo3'), root_path
  .userForm
    %h2.lginText 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .lginForm
        .field
          = f.text_field :name, autofocus: true, placeholder: '名前'
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス'
        .field
          = f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード(6文字以上)'
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワード再入力', class: 'pwCf'
      .actions
        = f.submit "新規登録", class: 'lginBtn'
    = render "devise/shared/links"
